doctype html
head
	meta(charset='UTF-8')
	meta(name='viewport', content='width=device-width, initial-scale=1.0')
	link(rel='shortcut icon', href='/chat/icon/chat.png', type='image/x-icon')
	title Chat
	link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
	link(rel='stylesheet', href='/chat/css/style.css')
#main-container.container-fluid.border-bottom.position-fixed.bgImg(style='z-index: 99; top: 0; left: 0;')
	.row.bg-light.pt-3.pb-3.pl-3.pr-3(style='z-index: 5;')
		.left.w-25.text-center
			span#fullnameid.text-primary.font-weight-bold #{user.fullname}
			br
			a(href='/auth/logout', style="font-size: small; z-index: 10") Log out
		#input-room.right.w-75
			.w-100.d-flex.justify-content-end
				input#roomId.form-control(type='text', placeholder='Room ID')
				button#btnJoinRoom.btn.btn-primary.ml-2 Join/Create
		#out-room.right.w-75.d-none
			.w-100.d-flex.justify-content-end
				span#room-id.text-secondary
				span#num-of-room.text-success(style='margin-left: 4px;')
				span#btnOutRoom.btn.btn-danger.ml-2 Leave
	.row.position-absolute.noti-enter-room(style='z-index: 2;')
		.noti-enter-room-in
			span Please enter the room
.container-fluid
	.row.d-flex
		.col-md-3.col-3.sector-left.position-fixed.img-show(style='z-index: 3;')
			h4.text-center.lm Image show
			input#fileSelect(type='file', accept="image/*", onchange='showFile(this);')
			.bg-img#result
		.col-3.left-hidden
		.col-md-9.col-sm-9.sector-chat
			h4#title-room.text-center(style='width: 100%; height: 40px; margin-bottom: 10px; line-height: 40px;') Chat
			#list-message(style='z-index: 5;')
				#wrapper-message
			.footer.fixed-bottom.p-2.d-flex.bg-light
				#typing.mr-2.d-none(style='line-height: 30px; font-size: 14px') Someone is typing...
				input#message.form-control(type='text', placeholder='Input message ...')
				button#btnSend.btn.btn-primary.ml-3 Send
script(src='/utils/jquery-3.1.0.js')
script(src='/utils/popper.min.js')
script(src='/bootstrap/js/bootstrap.min.js')
script(src='/socket.io/socket.io.js')
script(src="/chat/js/chat.js")